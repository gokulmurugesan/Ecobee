extends layout

block script
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/styles.css')
    script(src='/javascripts/bootstrap.min.js')
    
block content
    h1.header Demand Response Report Generator
    .login-card
      h2.text-center.text-success ECOBEE PORTAL LOGIN
      form.form-signin(action="/login" method="post")
        input#username.form-control(name='username' type='email', required='', placeholder='Email address', autofocus='')           
        input#password.form-control(name='password' type='password', required='', placeholder='Password')
        button#login.btn.btn-success.btn-block.btn-lg.btn-signin(type="submit" value="Submit") Log in
